<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/zero</item>
    </style>

    <style name="EmptyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="ParentLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/dimen16</item>
        <item name="android:paddingBottom">@dimen/dimen16</item>
        <item name="android:paddingEnd">@dimen/dimen16</item>
        <item name="android:paddingLeft">@dimen/dimen16</item>
        <item name="android:paddingRight">@dimen/dimen16</item>
        <item name="android:paddingStart">@dimen/dimen16</item>
    </style>

    <style name="circle">
        <item name="android:layout_width">@dimen/dimen50</item>
        <item name="android:layout_height">@dimen/dimen50</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/section_circle</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font16</item>
    </style>

    <style name="subLinearLayout">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen16</item>
        <item name="android:layout_marginStart">@dimen/dimen16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DateTimeLinear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dimen16</item>
        <item name="android:layout_marginStart">@dimen/dimen16</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dateTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/textColorNewsSection</item>
        <item name="android:textSize">@dimen/font12</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/textColorNewsTitle</item>
        <item name="android:textSize">@dimen/dimen16</item>
    </style>

    <style name="Section">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorNewsSection</item>
        <item name="android:textSize">@dimen/font12</item>
    </style>

</resources>
